<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--    分割线1    -->

    <View
        android:id="@+id/recommend_line1"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="50dp"
        android:background="#f6f6f6"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/recommend_btn1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recommend_line1">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/flash"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/flash" />

            <TextView
                android:layout_width="58dp"
                android:layout_height="32dp"
                android:text="限时秒杀" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/clear"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/clear" />

            <TextView
                android:layout_width="58dp"
                android:layout_height="32dp"
                android:text="断码清仓" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/findgood"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/findgood" />

            <TextView
                android:layout_width="58dp"
                android:layout_height="32dp"
                android:text="发现好货" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tree"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/tree" />

            <TextView
                android:layout_width="58dp"
                android:layout_height="32dp"
                android:text="夕夕果园" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sold"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/sold" />

            <TextView
                android:layout_width="68dp"
                android:layout_height="32dp"
                android:text="9块9特卖" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recommend_btn2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recommend_btn1">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rechrage"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/rechrage" />

            <TextView
                android:layout_width="58dp"
                android:layout_height="32dp"
                android:text="手机充值" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/i11"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/i11" />

            <TextView
                android:layout_width="58dp"
                android:layout_height="32dp"
                android:text="年度大促" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/loginin"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/loginin" />

            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="签到" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/savemoney"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/savemoney" />

            <TextView
                android:layout_width="78dp"
                android:layout_height="32dp"
                android:text="夕夕赚大钱" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/free"
                android:layout_width="52dp"
                android:layout_height="32dp"
                android:background="@drawable/free" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:text="免费领豆" />
        </LinearLayout>

    </LinearLayout>

    <!--    分割线2    -->

</androidx.constraintlayout.widget.ConstraintLayout>