<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:label="@string/menu_person"
    tools:context=".ui.person.PersonFragment">

    <com.example.pingxixi.tool.CircleImageView
        android:id="@+id/user_img"
        android:layout_width="85dp"
        android:layout_height="79dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="127dp"
        android:layout_height="89dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="48dp"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/user_img"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/my"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="我的订单"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_img"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="查看更多>"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.748"
        app:layout_constraintStart_toEndOf="@+id/my"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        tools:ignore="MissingConstraints" />

    <!--    分割线1    -->

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="#f6f6f6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/bt1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pay"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/pay" />

            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="待付款" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/share"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/share" />

            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="待分享" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/send"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/send" />

            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="待发货" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/receive"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/receive" />

            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="待收货" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/comment"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/comment" />

            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="待评论" />
        </LinearLayout>
    </LinearLayout>

    <!--    分割线2    -->

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="#f6f6f6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt1"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/coupon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/coupon" />

            <TextView
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:text="优惠券" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.example.pingxixi.tool.CircleImageView
                android:id="@+id/goods"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/goods" />

            <TextView
                android:layout_width="58dp"
                android:layout_height="32dp"
                android:text="商品收藏" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/store"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/store" />

            <TextView
                android:layout_width="58dp"
                android:layout_height="32dp"
                android:text="店铺关注" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/history"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/history" />

            <TextView
                android:layout_width="58dp"
                android:layout_height="32dp"
                android:text="历史记录" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/payback"
                android:layout_width="42dp"
                android:layout_height="32dp"
                android:background="@drawable/payback" />

            <TextView
                android:layout_width="58dp"
                android:layout_height="32dp"
                android:text="退款售后" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>